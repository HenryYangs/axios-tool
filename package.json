{
  "name": "axios-tool",
  "version": "0.1.0",
  "description": "An ajax director creator based on axios",
  "main": "index.js",
  "bin": {
    "axios-tool": "./bin/index.js"
  },
  "scripts": {
    "release": "standard-version",
    "lint": "eslint ."
  },
  "keywords": [
    "axios"
  ],
  "author": "Henry Yang <sephenry@gmail.com>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "commander": "^2.19.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.15.3",
    "husky": "^1.3.1",
    "lint-staged": "^13.1.0",
    "standard-version": "^5.0.2"
  },
  "peerDependencies": {
    "axios": "*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "npm run lint",
        "git add ."
      ]
    }
  }
}
